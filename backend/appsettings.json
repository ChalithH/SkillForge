{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Hosting.Diagnostics": "Error"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=/app/skillforge.db"
  },
  "ExchangeBackgroundService": {
    "Enabled": true,
    "CheckIntervalMinutes": 5,
    "GracePeriodHours": 2,
    "BatchSize": 50
  }
}